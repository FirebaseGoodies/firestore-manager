{
  "manifest_version": 2,

  "name": "Firestore Manager",
  "version": "1.0.0-beta",

  "default_locale": "en",
  "description": "Manage your firestore databases in ease",
  "icons": {
    "128": "assets/images/firestore_logo.png"
  },

  "web_accessible_resources": ["assets/images/*.png"],

  "browser_action": {
    "default_icon": "assets/images/firestore_logo.png",
    "default_popup": "index.html"
  },

  "options_ui":{
    "page": "index.html?page=options",
    "browser_style": false,
    "open_in_tab": false
  },

  "background": {
    "page": "index.html?page=background"
  },

  "author": "AXeL-dev",
  "homepage_url": "https://github.com/AXeL-dev/firestore-manager",

  "permissions": [
    "storage"
  ]
}
