{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "version": "1.0.2",

  "default_locale": "en",
  "description": "__MSG_extensionDesc__",
  "icons": {
    "128": "assets/images/firestore_logo.png"
  },

  "web_accessible_resources": ["assets/images/*.png"],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "browser_action": {
    "default_icon": "assets/images/firestore_logo.png",
    "default_popup": "index.html?page=manager"
  },

  "options_ui":{
    "page": "index.html?page=options",
    "browser_style": false,
    "open_in_tab": false
  },

  "background": {
    "scripts": ["background.js"]
  },

  "author": "AXeL-dev",
  "homepage_url": "https://github.com/AXeL-dev/firestore-manager",

  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ]
}
